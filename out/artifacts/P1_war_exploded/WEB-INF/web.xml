<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Сервлеты студентов-->
    <servlet>
        <servlet-name>StudentAdder</servlet-name>
        <servlet-class>servlets.Student.StudentAdder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentSelector</servlet-name>
        <servlet-class>servlets.Student.StudentSelector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentUpdater</servlet-name>
        <servlet-class>servlets.Student.StudentUpdater</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDeleter</servlet-name>
        <servlet-class>servlets.Student.StudentDeleter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAllSelector</servlet-name>
        <servlet-class>servlets.Student.StudentAllSelector</servlet-class>
    </servlet>
    <!--/Сервлеты студентов-->

    <!--Сервлеты преподов-->
    <servlet>
        <servlet-name>TeacherAdder</servlet-name>
        <servlet-class>servlets.Teacher.TeacherAdder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherSelector</servlet-name>
        <servlet-class>servlets.Teacher.TeacherSelector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherUpdater</servlet-name>
        <servlet-class>servlets.Teacher.TeacherUpdater</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherDeleter</servlet-name>
        <servlet-class>servlets.Teacher.TeacherDeleter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherPutInGroup</servlet-name>
        <servlet-class>servlets.Teacher.TeacherPutInGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherDeleteGroup</servlet-name>
        <servlet-class>servlets.Teacher.TeacherDeleteGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherGetFree</servlet-name>
        <servlet-class>servlets.Teacher.TeacherGetFree</servlet-class>
    </servlet>
    <!--/Сервлеты преподов-->

    <!--Сервлеты групп-->
    <servlet>
        <servlet-name>GroupAdder</servlet-name>
        <servlet-class>servlets.Group.GroupAdder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupSelector</servlet-name>
        <servlet-class>servlets.Group.GroupSelector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupDeleter</servlet-name>
        <servlet-class>servlets.Group.GroupDeleter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupUpdater</servlet-name>
        <servlet-class>servlets.Group.GroupUpdater</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupAllSelector</servlet-name>
        <servlet-class>servlets.Group.GroupAllSelector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupGetInfo</servlet-name>
        <servlet-class>servlets.Group.GroupGetInfo</servlet-class>
    </servlet>
    <!--/Сервлеты групп-->

    <!--Маппинг студентов-->
    <servlet-mapping>
        <servlet-name>StudentAdder</servlet-name>
        <url-pattern>/studentAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentSelector</servlet-name>
        <url-pattern>/studentSelect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentUpdater</servlet-name>
        <url-pattern>/studentUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDeleter</servlet-name>
        <url-pattern>/studentDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAllSelector</servlet-name>
        <url-pattern>/studentSelectAll</url-pattern>
    </servlet-mapping>
    <!--/Маппинг студентов-->

    <!--Маппинг преподов-->
    <servlet-mapping>
        <servlet-name>TeacherAdder</servlet-name>
        <url-pattern>/teacherAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherSelector</servlet-name>
        <url-pattern>/teacherSelect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherUpdater</servlet-name>
        <url-pattern>/teacherUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherDeleter</servlet-name>
        <url-pattern>/teacherDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherPutInGroup</servlet-name>
        <url-pattern>/teacherPutInGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherDeleteGroup</servlet-name>
        <url-pattern>/teacherDeleteGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherGetFree</servlet-name>
        <url-pattern>/getTeachers</url-pattern>
    </servlet-mapping>
    <!--/Маппинг преподов-->

    <!--Маппинг групп-->
    <servlet-mapping>
        <servlet-name>GroupAdder</servlet-name>
        <url-pattern>/groupAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupSelector</servlet-name>
        <url-pattern>/groupSelect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupDeleter</servlet-name>
        <url-pattern>/groupDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupUpdater</servlet-name>
        <url-pattern>/groupUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupAllSelector</servlet-name>
        <url-pattern>/groupSelectAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupGetInfo</servlet-name>
        <url-pattern>/groupGetInfo</url-pattern>
    </servlet-mapping>
    <!--/Маппинг групп-->

    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>servlets.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
</web-app>